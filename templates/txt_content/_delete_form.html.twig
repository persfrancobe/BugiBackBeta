<form method="post" action="{{ path('txt_content_delete', {'id': txt_content.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ txt_content.id) }}">
    <button class="btn">Delete</button>
</form>
