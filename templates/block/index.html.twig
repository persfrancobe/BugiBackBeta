{% extends 'base.html.twig' %}

{% block title %}Block index{% endblock %}

{% block body %}
    <h1>Block index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Name</th>
                <th>CreatAt</th>
                <th>UpdateAt</th>
                <th>Visible</th>
                <th>Ordby</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for block in blocks %}
            <tr>
                <td>{{ block.id }}</td>
                <td>{{ block.type }}</td>
                <td>{{ block.name }}</td>
                <td>{{ block.creatAt ? block.creatAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ block.updateAt ? block.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ block.visible ? 'Yes' : 'No' }}</td>
                <td>{{ block.ordby }}</td>
                <td>
                    <a href="{{ path('block_show', {'id': block.id}) }}">show</a>
                    <a href="{{ path('block_edit', {'id': block.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('block_new') }}">Create new</a>
{% endblock %}
