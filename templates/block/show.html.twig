{% extends 'base.html.twig' %}

{% block title %}Block{% endblock %}

{% block body %}
    <h1>Block</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ block.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ block.type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ block.name }}</td>
            </tr>
            <tr>
                <th>CreatAt</th>
                <td>{{ block.creatAt ? block.creatAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ block.updateAt ? block.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ block.visible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ordby</th>
                <td>{{ block.ordby }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('block_index') }}">back to list</a>

    <a href="{{ path('block_edit', {'id': block.id}) }}">edit</a>

    {{ include('block/_delete_form.html.twig') }}
{% endblock %}
