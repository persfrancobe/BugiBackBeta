{% extends 'base.html.twig' %}

{% block title %}Template index{% endblock %}

{% block body %}
    <h1>Template index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Template</th>
                <th>CreatAt</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.id }}</td>
                <td>{{ template.name }}</td>
                <td>{{ template.type }}</td>
                <td>{{ template.template }}</td>
                <td>{{ template.creatAt ? template.creatAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ template.updateAt ? template.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('template_show', {'id': template.id}) }}">show</a>
                    <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('template_new') }}">Create new</a>
{% endblock %}
